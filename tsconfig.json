{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "outDir": "build",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
